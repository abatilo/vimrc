set undofile
set undodir=~/.vim/undo

set nocompatible
syntax on

set autoindent
set smartindent

set tabstop=2
set shiftwidth=2
set expandtab
set backspace=indent,eol,start

set number
set cursorline

set splitbelow
set splitright

set t_Co=256
colorscheme alduin

set colorcolumn=100
highlight ColorColumn ctermbg=0 guibg=lightgrey
