{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(./hack/:*)",
      "Bash(cat:*)",
      "Bash(cwebp:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(helm:*)",
      "Bash(kubectl:*)",
      "Bash(kustomize:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(terraform:*)",
      "Bash(yarn:*)",
      "WebFetch(domain:*)",
      "mcp__deepwiki"
    ],
    "deny": [
      "mcp__codex__codex-reply"
    ],
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "/Users/abatilo/work"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "claude-code-wakatime@wakatime": true,
    "abatilo-core@abatilo-plugins": true
  },
  "extraKnownMarketplaces": {
    "abatilo-plugins": {
      "source": {
        "source": "directory",
        "path": "/Users/abatilo/abatilo/vimrc/plugins"
      }
    }
  },
  "alwaysThinkingEnabled": true
}
