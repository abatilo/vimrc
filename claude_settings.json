{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "MAX_THINKING_TOKENS": "31999"
  },
  "statusLine": {
    "type": "command",
    "command": "npx --yes ccusage statusline"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(./hack/:*)",
      "Bash(cat:*)",
      "Bash(cwebp:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(helm:*)",
      "Bash(kubectl:*)",
      "Bash(kustomize:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(terraform:*)",
      "Bash(yarn:*)",
      "WebFetch(domain:*)",
      "mcp__deepwiki",
      "mcp__sequential-thinking"
    ],
    "deny": []
  }
}
