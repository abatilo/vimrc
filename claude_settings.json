{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "ENABLE_LSP_TOOL": "1",
    "ENABLE_TOOL_SEARCH": "true",
    "MAX_THINKING_TOKENS": "31999"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(./hack/:*)",
      "Bash(cat:*)",
      "Bash(cwebp:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(helm:*)",
      "Bash(kubectl:*)",
      "Bash(kustomize:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(terraform:*)",
      "Bash(yarn:*)",
      "WebFetch(domain:*)",
      "mcp__deepwiki"
    ],
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "/Users/abatilo/work",
      "/Users/abatilo/Documents/notes"
    ]
  },
  "model": "opus",
  "hooks": {},
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "claude-code-wakatime@wakatime": true,
    "abatilo-core@abatilo-plugins": true,
    "code-simplifier@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "abatilo-plugins": {
      "source": {
        "source": "directory",
        "path": "/Users/abatilo/abatilo/vimrc/plugins"
      }
    }
  },
  "alwaysThinkingEnabled": true
}
